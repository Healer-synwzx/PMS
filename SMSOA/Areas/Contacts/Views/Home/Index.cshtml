
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>   

    <link href="~/Scripts/EasyUI/themes/icon.css" rel="stylesheet" />
    <link href="~/Scripts/EasyUI/themes/black/easyui.css" rel="stylesheet" />

    <link href="~/Scripts/EasyUI/themes/color.css" rel="stylesheet" />

    @*@Styles.Render("~/Scripts/EasyUI/themes/black")*@
    @Scripts.Render("~/mvcAjax")
    @*@Scripts.Render("~/Scripts/easyUIJS")*@
    <script src="~/Scripts/EasyUI/jquery.easyui.min.js"></script>
    <script src="~/Scripts/EasyUI/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/MyScripts/jquery.msgProcess.js"></script>
    @*自己写的图标样式*@
    <link href="~/Scripts/MyCSS/MyIcon.css" rel="stylesheet" />
    <script type="text/javascript">
        //现修改为：
        //点击该按钮时加载群组的首页
        //而不是点击按钮加载群组的datagrid
        function ShowGroup() {
            //$("#loadContactDiv").load("/Contacts/Group/Index");
            //$("#loadContactDiv").src("/Contacts/Group/Index");
            $("#iframeContactDiv").attr("src", "/Contacts/Group/Index");
        }
    </script>
</head>
<body>
    <div style="margin:20px 0;"></div>
    <div id="cc" class="easyui-layout" style="width:700px;height:350px;">        
        <div data-options="region:'west',
             split:true,
             collapsed:true,
				hideExpandTool: true,
				expandMode: null,
				hideCollapsedContent: false,
				collapsedSize: 68,
				collapsedContent: function(){
					return $('#titlebar');
				}
				" title="West" style="width:100px;"></div>
        <div data-options="region:'center',title:'Main Title'">            
            @*<div id="loadContactDiv">

            </div>*@
            <iframe scrolling="no" frameborder="0" id="iframeContactDiv" style="width:100%;height:100%; overflow: hidden;"></iframe>
        </div>
    </div>
    <div id="titlebar" style="padding:2px">
        
        <a href="javascript:void(0)" class="easyui-linkbutton" style="width:100%" data-options="iconCls:'icon-mygroup',size:'large',iconAlign:'top'" onclick="ShowGroup()">群组</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" style="width:100%" data-options="iconCls:'icon-myPhonebook',size:'large',iconAlign:'top'" onclick="ShowContact()">联系人</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" style="width:100%" data-options="iconCls:'icon-addContacts',size:'large',iconAlign:'top'" onclick="ShowContact()">联系人</a>
    </div>
</body>
</html>
