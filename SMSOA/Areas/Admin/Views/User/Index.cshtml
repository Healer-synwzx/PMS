    <script type="text/javascript">

        var toolbar= [ {
            iconCls: 'icon-add',
            text: "新增",
            handler: addRow
        }, '-', {
            iconCls: 'icon-remove',
            text: "删除",
            handler: removeRow
        }, '-',{
            iconCls: 'icon-edit',
            text: "编辑",
            handler: editRow
        }]
        //提交
        function submitForm() {
