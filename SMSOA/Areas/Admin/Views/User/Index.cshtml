        function submitForm() {
            $.ajax({
                type: "post",
                url: "/Admin/User/Create",      // 这里是提交到什么地方的url
                data: $("#ff").serialize(), // 这里把表单里面的数据提交（！！！注意需要将表单序列化！！！）
                dataType: "json",
                success: function (res) {
                    // 调用回调函数
                    show("res");
