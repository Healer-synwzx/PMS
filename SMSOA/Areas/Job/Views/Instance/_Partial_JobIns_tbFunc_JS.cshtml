<script type="text/javascript">
    function callback(rows) {
        var strId = "";
        for (var i = 0; i < rows.length; i++) {
            strId = strId + rows[i].JID + ",";
        }
        return strId;
    }
    function addJobRow(jobType) {
        showEditWindow("@ViewBag.ShowCreateWin" + "?jopType=" + jobType);
    }

    function removeJobRow() {
        CheckSelectRows("datagrid", "准备删除？", callback, "@ViewBag.DoAdd");
    }
    function editJobRow() {

    }
    function pauseJobRow() {
        CheckOnlySelectionAndDo("datagrid", "要暂停选中的作业？", "指定作业已暂停", "JID", "@ViewBag.DoPause", "jid");
        
    }
    function recoveryJobRow() {
        CheckSelectRows("datagrid", "准备恢复？", callback, "@ViewBag.DoRecovery");
    }
    function endJobRow() {
        CheckSelectRows("datagrid", "准备终止？", callback, "@ViewBag.DoEnd");
    }
</script>